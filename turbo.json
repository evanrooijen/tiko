{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        "tsconfig.json",
        "package.json",
        "pnpm-lock.yaml"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
